<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <% if @user.errors.any? %>
        <%= render 'layouts/error_messages', model: f.object %>
      <% end %>
    　　
      <div class="form-group">
        <%= f.label :image, 'プロフィール写真' %>
        <p><%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %></p>
        <p><%= f.check_box :remove_image %>画像を設定しない</p>
      </div>
      
      <div class="form-group">
        <%= f.label :age, '年齢', class:'control-label' %>
        <%= f.select :age, [["10代","10代"], ["20代","20代"], ["30代","30代"], ["40代","40代"], ["50代","50代"], ["60代","60代"], ["70代以上","70代以上"]], {}, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :sex, '性別', class:'control-label' %>
        <%= f.select :sex, [["無回答","無回答"], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>
      </div>
   
      <div class="form-group">
        <%= f.label :live, '地域（県や市など）' %>
        <%= f.text_field :live, class: 'form-control' %>
      </div>
   
      <div class="form-group">
        <%= f.label :introduce, '自己紹介（255文字未満）' %>
        <%= f.text_area :introduce, :maxlength => "255", :size => "80x5",  class: 'form-control'  %>
      </div>
      <%= f.submit 'プロフィール編集を完了する', class: 'btn btn-primary mb-3' %>
    <% end %>
  </div>
</div>
