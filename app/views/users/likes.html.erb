<div class="row">
  <aside class="col-sm-4">
    <div class="aside-menu">
      <% if current_user == @user %>
        <% if @user.image? %>
          <%= image_tag @user.image.url(:thumb225), class: 'rounded-circle image mt-5' %>
          <h2 class="pl-2"><%= @user.name %></h2>
          <div class="user-menu">
            <table>
              <tr>
                <th>年齢</th>
                <td><%= @user.age %></td>
              </tr>
              <tr>
                <th>性別</th>
                <td><%= @user.sex %></td>
              </tr>
              <tr>
                <th>地域</th>
                <td><%= @user.live %></td>
              </tr>
            </table>
            <p><%= simple_format(@user.introduce) %></p>
          </div>
        <% else %>
          <%= image_tag"noimage.png", class: 'rounded-circle image mt-5 mb-2' %>
          <h2 class="pl-2"><%= @user.name %></h2>
          <div class="user-menu">
            <table>
              <tr>
                <th>年齢</th>
                <td><%= @user.age %></td>
              </tr>
              <tr>
                <th>性別</th>
                <td><%= @user.sex %></td>
              </tr>
              <tr>
                <th>地域</th>
                <td><%= @user.live %></td>
              </tr>
            </table>
            <p><%= simple_format(@user.introduce) %></p>
          </div>
        <% end %>
      <% else %>
        <% if @user.image?%>
          <%= image_tag"noimage.png", class: 'rounded-circle image mt-5 mb-2' %>
          <h2 class="pl-2"><%= @user.name %></h2>
          <div class="user-menu">
            <table>
              <tr>
                <th>年齢</th>
                <td><%= @user.age %></td>
              </tr>
              <tr>
                <th>性別</th>
                <td><%= @user.sex %></td>
              </tr>
              <tr>
                <th>地域</th>
                <td><%= @user.live %></td>
              </tr>
            </table>
            <p><%= simple_format(@user.introduce) %></p>
          </div>
        <% else %>
          <%= image_tag"noimage.png", class: 'rounded-circle image mt-5 mb-2' %>
          <h2 class="pl-2"><%= @user.name %></h2>
        <% end %>
      <% end %>
      <% if current_user == @user %>
        <p><%= link_to 'プロフィールを編集する', edit_user_path(@user) %></p>
        <p><%= link_to '投稿する', spots_new_path %></p>
      <% end %>
    </div>
  </aside>
  <div class="col-sm-8 pl-4">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿一覧  <span class="badge badge-secondary"><%= @count_spots %></span></a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">お気に入り  <span class="badge badge-secondary"><%= @count_favorites %></span></a></li>
    </ul>
    <%= render 'spots/spots', spots: @subspots %>
  </div>
</div>