<div class="row">
  <aside class="col-sm-4">
    <h3 class="card-title"><%= @user.name %></h3>
    <% if current_user == @user %>
      <p><%= link_to '投稿する', spots_new_path %></p>
    <% end %>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿一覧  <span class="badge badge-secondary"><%= @count_spots %></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">お気に入り</a></li>
    </ul>
  <%= render 'spots/spots', spots: @spots %>
  </div>
</div>