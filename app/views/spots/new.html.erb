<div class="row mb-4">
  <div class="col-lg-6 offset-lg-3 col-sm-8 offset-sm-2">
    <%= form_with(model: @spot, local: true, html: { multipart: true }) do |f| %>
    　<% if @spot.errors.any? %>
    　   <%= render 'layouts/error_messages', model: f.object %>
  　　<% end %>
  　　
      <div class="form-group">
        <%= f.label :name, 'スポット名称' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :picture, 'スポット写真' %>
        <p><%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %></p>
      </div>
    
      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      
      <div>
        <%= f.label :about, 'このスポットについての説明' %>
        <%= f.text_area :about, placeholder: 'このスポットの良いところなど自由に記入しましょう！', size: "20x10", class: 'form-control' %>
        <%= f.submit '投稿する', class: 'btn btn-primary mt-5' %>
      </div>   
    <% end %>
  </div>
</div>