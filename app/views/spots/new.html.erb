
<%= form_with(model: @spot, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'スポット名称' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  
  <div>
    <%= f.label :about, 'このスポットについての説明' %>
    <%= f.text_area :about, size: "20x10", class: 'form-control' %>
          
    <%= f.submit '投稿する', class: 'btn btn-primary btn-block mt-5 ' %>
  </div>   
<% end %>